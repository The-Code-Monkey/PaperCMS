{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "jsx": "react",
    "importHelpers": true,
    "rootDir": "src",
    "declaration": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declarationDir": "dist/types",
    "baseUrl": "."
  },
  "exclude": ["node_modules", "tmp", "node_modules/**/*.*"]
}
