{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "jsx": "react",
    "importHelpers": true,
    "outDir": "./dist/esm",
    "rootDir": "src",
    "declaration": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declarationDir": "dist/types",
    "baseUrl": ".",
    "paths": {
      "@nucleus-cms/components": ["packages/components/src/index.ts"],
      "@nucleus-cms/create-nucleus-app": [
        "packages/create-nucleus-app/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp", "node_modules/**/*.*"]
}
