{
  "name": "components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/components/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "command": "cd packages/components && tcm build --format esm && cd ../.. && mkdir -p ./dist/packages/components/src && cp -r ./packages/components/dist/esm ./dist/packages/components/src && cp ./package.json ./dist/packages/components",
        "outputPath": "dist/packages/components",
        "main": "packages/components/src/index.ts",
        "tsConfig": "packages/components/tsconfig.lib.json",
        "assets": ["packages/components/*.md"]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs components {args.ver} {args.tag}"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/components/**/*.ts"]
      }
    }
  },
  "tags": []
}
