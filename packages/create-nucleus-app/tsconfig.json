{
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/story.tsx"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "declarationDir": "dist/types",
    "lib": ["dom"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "jsx": "react",
    "importHelpers": true,
    "declaration": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  }
}
