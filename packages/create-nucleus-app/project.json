{
  "name": "create-nucleus-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/create-nucleus-app/src",
  "projectType": "library",
  "targets": {
    "build:cli": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd packages/create-nucleus-app && tsc -p ./tsconfig.json && cd ../.. && mkdir -p ./dist/packages/create-nucleus-app/src && cp -r ./packages/create-nucleus-app/dist/. ./dist/packages/create-nucleus-app && cp ./packages/create-nucleus-app/package.json ./dist/packages/create-nucleus-app"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs create-nucleus-app {args.ver} {args.tag}"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputFile}"],
      "options": {
        "command": "tcm lint",
        "lintFilePatterns": ["packages/create-nucleus-app/**/*.ts"]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/packages/create-nucleus-app/src/index.js",
      }
    }
  },
  "tags": []
}
