{
  "npmClient": "yarn",
  "command": {
    "publish": {
      "message": "chore(release): publish %s",
      "registry": "https://registry.npmjs.org/"
    },
    "version": {
      "message": "chore(release): version",
      "allowBranch": [
        "release",
        "main",
        "feature/*"
      ],
      "conventionalCommits": true
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "useWorkspaces": true,
  "packages": [
    "packages/*",
    "demo/*"
  ],
  "version": "independent"
}
